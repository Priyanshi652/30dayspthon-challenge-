# ğŸš€ Building my own stack from scratch â€” step by step!

class MyStack:
    def __init__(self):
        # Starting fresh with an empty container for my stack
        self.stack_container = []
        print("âœ¨ Stack is here â€” empty and ready!")
        print("-"*80)

    def push(self, value):
        # Time to add something on top of the stack!
        self.stack_container.append(value)
        print(f"ğŸ§± Pushed '{value}' onto the stack. Stack size now: {len(self.stack_container)}")

    def pop(self):
        # Let's take off the top item â€” hope it's what I want!
        if len(self.stack_container) == 0:
            print("âš ï¸ Uh-oh! Stack is empty â€” nothing to pop!")
            return None
        removed = self.stack_container.pop()
        print(f"ğŸ—‘ï¸ Popped '{removed}' from the stack. Stack size now: {len(self.stack_container)}")
        return removed

    def peek(self):
        # Sneak a peek at the top without removing it â€” shhh!
        if len(self.stack_container) == 0:
            print("ğŸ‘€ Stack is empty â€” nothing to peek at.")
            return None
        print(f"ğŸ‘† Top item is '{self.stack_container[-1]}'")
        return self.stack_container[-1]

    def is_empty(self):
        # Quick check â€” is my stack still empty?
        empty = len(self.stack_container) == 0
        print(f"ğŸ” Is stack empty? {'Yes' if empty else 'No'}")
        return empty

    def show_stack(self):
        # Show current stack from top to bottom!
        if self.stack_container:
            print("(top to bottom):\n")
            for item in reversed(self.stack_container):
                print(item)
        else:
            print("Stack is empty.")

# ğŸ§ª Time to play with my stack!

my_stack = MyStack()

print("\nâœ¨ Let's push some things onto our stack")
my_stack.push("Python")
my_stack.push("DSA")
my_stack.push("Stack")

print("\nğŸ” Here's what the stack looks like now-:")
my_stack.show_stack()

print("-"*80)
print("\nğŸ‘€ What's on top? Let's peek-:")
my_stack.peek()

print("\nğŸ—‘ï¸ Let's pop the top item off-:")
my_stack.pop()

print("\nğŸ“¦ And now, the stack after popping-:")
my_stack.show_stack()

print("\nğŸ” Final check-:")
my_stack.is_empty()
